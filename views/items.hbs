<h1>Lisa uued kaubad</h1>

<form method="post" action="/items">



    <div class="form-group">
        <label for="itemName">Kauba nimetus</label>
        <input type="text" class="form-control {{#if errors.name}} is-invalid{{/if}}" name="name" id="itemName" placeholder="Sisesta kauba nimetus" value="{{values.name}}">
        {{#if errors.name}}<div class="invalid-feedback">{{errors.name}}</div>{{/if}}
    </div>

    <div class="form-group">
        <label for="itemAmount">Kauba hind</label>
        <input type="number" class="form-control {{#if errors.amount}} is-invalid{{/if}}" name="amount" id="itemAmount" placeholder="Sisesta kauba hind" value="{{values.amount}}">
        {{#if errors.amount}}<div class="invalid-feedback">{{errors.amount}}</div>{{/if}}
    </div>

    <button type="submit" class="btn btn-primary">Lisa kaup</button>
</form>


